import pygame
import sys

pygame.init()

WIDTH, HEIGHT = 800, 600
WINDOW = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Escape It!")

WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
GRAY = (200, 200, 200)
BLUE = (100, 149, 237)
GREEN = (50, 205, 50)
RED = (220, 20, 60)

font_large = pygame.font.SysFont("Arial", 60)
font_medium = pygame.font.SysFont("Arial", 40)
font_small = pygame.font.SysFont("Arial", 28)

def create_button(x, y, width, height, color, hover_color, text, text_color, font):
    return {
        "rect": pygame.Rect(x, y, width, height),
        "color": color,
        "hover_color": hover_color,
        "text": text,
        "text_color": text_color,
        "font": font
    }

def draw_button(button):
    mouse_pos = pygame.mouse.get_pos()
    if button["rect"].collidepoint(mouse_pos):
        pygame.draw.rect(WINDOW, button["hover_color"], button["rect"])
    else:
        pygame.draw.rect(WINDOW, button["color"], button["rect"])
    
    text_surface = button["font"].render(button["text"], True, button["text_color"])
    text_rect = text_surface.get_rect(center=button["rect"].center)
    WINDOW.blit(text_surface, text_rect)

def is_button_clicked(button, event):
    if event.type == pygame.MOUSEBUTTONDOWN:
        if button["rect"].collidepoint(event.pos):
            return True
    return False

# Create buttons
button_ai_vs_human = create_button(150, 300, 250, 100, GRAY, BLUE, "AI VS Human", BLACK, font_medium)
button_human_vs_human = create_button(450, 300, 250, 100, GRAY, GREEN, "Human VS Human", BLACK, font_medium)

def draw_background():
    WINDOW.fill(WHITE)
    for i in range(0, WIDTH, 40):
        pygame.draw.line(WINDOW, GRAY, (i, 0), (i, HEIGHT), 1)
    for j in range(0, HEIGHT, 40):
        pygame.draw.line(WINDOW, GRAY, (0, j), (WIDTH, j), 1)

def draw():
    draw_background()
    draw_text = font_large.render("ESCAPE IT", True, BLACK)
    WINDOW.blit(draw_text, draw_text.get_rect(center=(WIDTH // 2, 100)))
    draw_button(button_ai_vs_human)
    draw_button(button_human_vs_human)
    pygame.display.flip()

# Main game loop
running = True
while running:
    draw()
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        elif is_button_clicked(button_ai_vs_human, event):
            print("AI vs Human selected")
            # Placeholder for starting AI vs Human mode
        elif is_button_clicked(button_human_vs_human, event):
            print("Human vs Human selected")
            # Placeholder for starting Human vs Human mode

pygame.quit()
sys.exit()
